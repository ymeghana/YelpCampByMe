<%- include("partials/header")%>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center">Forgot Password</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/reset/<%= token%>" method="post">
                    <div class="form-group">
                        <label for="password">New Password</label>
                        <input class="form-control" type="password" name="password" placeholder="New Password" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="password">Confirm Password</label>
                        <input class="form-control" type="password" name="confirm" placeholder="Confirm Password" autofocus>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Update Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer")%>